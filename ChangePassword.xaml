<Window x:Class="ZRDB.ChangePassword"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZRDB"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Title="Изменение пароля" SizeToContent="WidthAndHeight">
    <Grid>
        <StackPanel>
            <TextBlock Name="mainTitle_text" FontWeight="SemiBold" Margin="5">Изменение пароля для пользователя</TextBlock>
            <TextBlock Margin="5,0,3,-3">Введите новый пароль:</TextBlock>
            <PasswordBox Name="main_pwdtb" Margin="5,5,25,0" HorizontalAlignment="Stretch"></PasswordBox>
            <TextBox Name="main_tb" Margin="5,-18,25,0" HorizontalAlignment="Stretch" Visibility="Hidden"></TextBox>
            <Button Width="18" Height="18" Margin="5,-18,5,0" HorizontalAlignment="Right" Click="switchVisibleButton_C">
                <Image Source="pack://application:,,,/Resources/Eye.png"></Image>
            </Button>
            <Button Click="saveButton_C" Margin="5">Изменить</Button>
        </StackPanel>
    </Grid>
</Window>
