<Window x:Class="ZRDB.Help"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZRDB"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"

        Width="300"
        Title="Help" SizeToContent="Height">
    <Grid>
        <StackPanel>
            <Image Source="icon.ico" Width="100" Margin="5" HorizontalAlignment="Center"/>
            <TextBlock FontWeight="Bold" FontSize="16" HorizontalAlignment="Center" Margin="5">ZRDB</TextBlock>
            <TextBlock HorizontalAlignment="Center">           
            <Hyperlink NavigateUri="mailto:maksimkh34@duck.com" RequestNavigate="Hyperlink_RequestNavigate">
                maksimkh34@duck.com
            </Hyperlink>
            </TextBlock>
            <TextBlock HorizontalAlignment="Center">           
            <Hyperlink NavigateUri="https://github.com/maksimkh34/ZRDB" RequestNavigate="Hyperlink_RequestNavigate">
                GitHub (In-Dev Only)
            </Hyperlink>
            </TextBlock>
            <Button Click="SendMainButton_C" Margin="5,10,5,5">Сообщить об ошибке</Button>
        </StackPanel>
    </Grid>
</Window>
