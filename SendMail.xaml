<Window x:Class="ZRDB.SendMail"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZRDB"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Title="SendMail" SizeToContent="WidthAndHeight">
    <Grid>
        <StackPanel>
            <TextBlock FontWeight="SemiBold" Margin="5">Подготовка сообщения об ошибке   </TextBlock>
            <TextBlock Margin="5,5,5,-3">Ваше имя:</TextBlock>
            <TextBox Name="name_tb" Margin="5"></TextBox>
            <TextBlock Margin="5,0,5,-3">Почта для обратной связи:</TextBlock>
            <TextBox Name="mail_tb" Margin="5"></TextBox>
            <TextBlock Margin="5,0,5,-3">Текст сообщения:</TextBlock>
            <TextBox TextWrapping="Wrap" AcceptsReturn="True" SpellCheck.IsEnabled="True" 
                     Height="150" Margin="5" Name="text_tb"></TextBox>
            <Button Click="SendMainButton_Click" Margin="5,-2,5,5">Отправить</Button>
        </StackPanel>
    </Grid>
</Window>
