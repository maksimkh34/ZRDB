<Window x:Class="ZRDB.AddUser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZRDB"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Closed="Window_Closed"
        WindowStartupLocation="CenterScreen"
        Title="Добавление пользователя" SizeToContent="WidthAndHeight">
    <Grid>
        <StackPanel>
            <TextBlock Margin="5" FontWeight="SemiBold" HorizontalAlignment="Center">Добавление нового пользователя</TextBlock>
            <TextBlock Margin="5">Логин (имя пользователя):</TextBlock>
            <TextBox x:Name="login_tb" Margin="5,-3,5,0"></TextBox>
            <TextBlock Margin="5">Пароль:</TextBlock>
            <PasswordBox Name="password_tb" Margin="5,-3,5,0"></PasswordBox>
            <Button Click="AddUserButton_C" Margin="5">Сохранить</Button>
        </StackPanel>
    </Grid>
</Window>
