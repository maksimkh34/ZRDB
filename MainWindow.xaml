<Window x:Class="ZRDB.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZRDB"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        Title="MainWindow" Height="115" Width="300">
    <Grid>
        <StackPanel Margin="5">
            <TextBlock FontWeight="SemiBold" Margin="3,1,3,3">Логин</TextBlock>
            <TextBox Name="login_tb" Margin="3,0,3,0"></TextBox>
            <TextBlock FontWeight="SemiBold" Margin="3">Пароль</TextBlock>
            <PasswordBox Name="password_tb" Margin="3,0,3,0"></PasswordBox>
            <Button Click="LoginButton_C" Margin="3" VerticalAlignment="Stretch">Войти</Button>
        </StackPanel>
    </Grid>
</Window>
